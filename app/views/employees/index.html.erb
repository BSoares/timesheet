<% content_for(:page_title) { t(".title") } %>

<%= render "tabs" %>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th width="36"></th>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td>
          <%= link_to edit_employee_url(employee), title: t("employees.edit.title", name: employee.name) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
