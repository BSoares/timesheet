<ul class="nav nav-tabs bottom-space">
  <li class="<%= "active" if ['new', 'create'].include?(params['action']) %>">
    <%= link_to new_employee_url do %>
      <i class="fa fa-plus"></i>
      <%= t("employees.new.title") %>
    <% end %>
  </li>

  <li class="<%= "active" if params['action'] == 'index' %>">
    <%= link_to employees_url do %>
      <i class="fa fa-list"></i>
      <%= t("employees.index.title") %>
    <% end %>
  </li>

  <% if @employee.present? and @employee.persisted? %>

    <li class="<%= "active" if ['edit', 'update'].include?(params['action']) %>">
      <%= link_to edit_employee_url(@employee) do %>
        <i class="fa fa-pencil"></i>
        <%= t("employees.edit.title", name: @employee.name) %>
      <% end %>
    </li>

  <% end %>
</ul>
